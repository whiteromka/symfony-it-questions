<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <div class="sb-sidenav-menu-heading">Разделы</div>
                {# Основное меню  #}
                {# См MenuExtension, MenuService  #}
                {% set menu_items = get_menu_items() %}
                {% for item in menu_items %}
                    <a class="nav-link {{ app.request.get('_route') == item.route ? 'active_link' }}"
                       href="{{ path(item.route) }}"
                    >
                        <div class="sb-nav-link-icon"><i class="fas {{ item.icon }}"></i></div>
                        {{ item.name }}
                    </a>
                {% endfor %}

                <div class="sb-sidenav-menu-heading">Регистрация/Авторизация</div>
                <a class="nav-link" href="{{ path('app_register') }}">
                    <div class="sb-nav-link-icon"><i class="fas_ fa-table_"></i></div>
                    Регистрация
                </a>

                {% if app.user %}
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <div class="sb-nav-link-icon"><i class="fas_ fa-table_"></i></div>
                        Выход
                    </a>
                {% else %}
                    <a class="nav-link" href="{{ path('app_login') }}">
                        <div class="sb-nav-link-icon"><i class="fas_ fa-table_"></i></div>
                        Вход
                    </a>
                {% endif %}
            </div>
        </div>

    </nav>
</div>